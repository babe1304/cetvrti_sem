<!DOCTYPE html>
<html>

<%- include(`partials/head`); %>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">

    <div class="container">
        <div class="centered-container">
            <h1 class="decorated-title font-secondary main-color"><span
                    class="main-color-emphasized">Item</span> Information</h1>
            <div class="separator"></div>
        </div>
    
        <div class="item-view centered-container">
            <img class="item-view-image" src="<%= item.imageurl %>" alt="image of flowers"></img>
            <div class="item-view-text">
                <div class="item-view-text-title font-secondary main-color-emphasized"><%= item.name %></div>
                <hr>
                <div class="item-view-text-property main-color">Price: <span class="item-view-text-value"><%= item.price %>kn</span></div>
                <div class="item-view-text-property main-color">Available colors: <span class="item-view-text-value"><%= item.colors %></span></div>
                <div class="item-view-text-property main-color">Category: <span class="item-view-text-value"><%= category.name %></span></div>
                <div class="item-view-text-property main-color">Seasonal: <span class="item-view-text-value"><%= category.seasonal %></span></div>
                <div class="item-view-text-desc font-secondary main-color"><%= category.description %></div>
            </div>
        </div>
        <div class="centered-container">
            <h1 class="decorated-title font-secondary main-color"><span class="main-color-emphasized">Item</span> Top Buyers</h1>
            <div class="separator"></div>
        </div>
        <% if (buyers.length === 0) { %>
            <div class="centered-container">
                <h2 class="decorated-title font-secondary main-color">No top buyers. :( </h2>
            </div>
        <% } else { %>
            <section class="section secondary-color-bg info_container">
                <% for (let buyer of buyers) { %>
                    <h3 class="decorated-title font-secondary main-color-emphasized"><%= buyer.name + ' ' + buyer.surname %>
                        <!--<form action="/buyers/create-buyer" style="display:inline" method="GET">
                            <input type="hidden" value="<%= //buyer.id %>" name="buyer">
                            <input type="image" src="/images/plus.png" class="icon_crud">
                        </form> -->
                        <a href="/buyers/update-buyer/<%= buyer.id %>"><img src="/images/pencil.png" class="icon_crud"></a> 
                    </h3>
                    <div class="item-view-text-property main-color">Country: 
                        <span class="item-view-text-value"><%= buyer.country %></span></div>
                    <div class="item-view-text-property main-color">E-mail: 
                        <span class="item-view-text-value"><%= buyer.email %></span></div>
                    <div class="item-view-text-property main-color">Buyer since: 
                        <span class="item-view-text-value"><%= buyer.buyersince %></span></div>
                    <hr>
                <% } %>
            </section>
        <% } %>
    </div>

</main>

<%- include(`partials/footer`); %>

</body>

</html>